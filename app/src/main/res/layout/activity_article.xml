<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ArticleActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:id="@+id/titreView"
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left" android:backgroundTint="?android:attr/colorFocusedHighlight"
                    android:background="@android:color/holo_green_light"
                    android:paddingLeft="@dimen/titreLeftPad"/>
            <TextView
                    android:id="@+id/bodyView"
                    android:layout_width="match_parent"
                    android:layout_height="127dp" android:background="@android:color/holo_orange_light"
                    android:backgroundTint="@android:color/holo_orange_light"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>